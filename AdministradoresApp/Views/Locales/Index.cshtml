@model IEnumerable<EntidadesCompartidasCore.Local>

@{
    ViewData["Title"] = "Index";
}

<p></p>
<p></p>
<p></p>

@{ 
    var mensaje = @ViewBag.Message;

    if (mensaje != null && mensaje != "")
    { 

        <h3 class="text-info">@mensaje</h3>

    }

}

<h2 class="container">Lista de Locales</h2>

<div class="container">

    <p>
        <a asp-action="Alta">Create New</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Direccion)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Direccion)
                    </td>
                    <td>
                        @Html.ActionLink("Modificar", "Modificar", new { id = item.Id }) |
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" asp-controller="Home">Volver</a>

</div>

