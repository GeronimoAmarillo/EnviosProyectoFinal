@model Usuario

@{
    if (Model != null)
    {
        <p>Bienvenido @Model.NombreUsuario</p>

        if (Model is Empleado)
        {
            if (Model is Cadete)
            {
                <p>Tipo de sesion: Cadete</p>
            }
            else
            {
                <p>Tipo de sesion: Administrador</p>
            }
        }
        else
        {
            <p>Tipo de sesion: Cliente</p>
        }

        <nav class="menuCSS3">
            <ul>
                <li>
                    <a href="#">Acciones</a>
                    <ul>
                        <li><a asp-area="" asp-controller="Usuarios" asp-action="ModificarMail">Modificar Email de Contacto</a></li>
                    </ul>
                </li>
            </ul>
        </nav>

    }
    else
    {

        <p>No hay ningun usuario logueado</p>
        <p>Ingrese sus credenciales para acceder a las funcionalidades del sistema.</p>
    }
}